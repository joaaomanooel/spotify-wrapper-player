    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joaaomanooel/spotify-wrapper-player.git"
  },
  "keywords": [
    "js",
    "tdd",
    "library"
