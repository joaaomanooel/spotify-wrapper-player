  "author": "Jo√£o Manoel Neto <joaaomanooel@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joaaomanooel/spotify-wrapper-player/issues"
  },
  "homepage": "https://github.com/joaaomanooel/spotify-wrapper-player#readme",
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "@babel/register": "^7.0.0",
    "babel-loader": "^8.0.4",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "husk": "^0.5.3",
    "husky": "^0.14.3",
    "mocha": "^5.1.1",
    "nyc": "^11.8.0",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "dependencies": {
    "@manoel_joaoo/spotify-wrapper": "^2.1.0"
  }
